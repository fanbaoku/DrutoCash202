<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white">
    <TextView
        android:id="@+id/page_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Permission"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/main_text"
        android:textSize="19sp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:textColor="@color/main_text"
                android:textSize="15sp"
                android:text="Camera:"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text"
                android:textSize="13sp"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:text="When you use the app, we will ask you to grant us the permission to open the mobile phone camera , the purpose of the request is for you to better fill in your personal information, so that we can confirm that you are the person applying for a loan, and evaluate your credit score. This permission will only take effect when you fill in your personal information and take a photo. You can rest assured that without your permission, we will not use this information for any non-compliant operations or provide it to third parties. We will upload it to a dedicated server: https://apitz.ekascraddlemax.site for encryption protection"
                android:paddingBottom="15dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"/>

        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/access"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        app:backgroundTint="@null"
        android:stateListAnimator="@null"
        style="@style/AssistantMajorButton"
        android:padding="0dp"
        android:text="@string/permission_spec_access"
        android:textSize="17sp" />
</LinearLayout>